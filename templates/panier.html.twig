{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block content %}
    <main class="panierContainer">
        <div class="container">
            <h2>Mon Panier</h2>
            <div data-controller="cart">
                {% if cart.items is not empty %}
                    <ul class="panierItems">
                        {% for item in cart.items %}
                            <li class="panierItem">
                                {# <img src="{{ item.product.imageUrl }}" class="panierImage"> #}
                                <div class="panierInfo">
                                    <h3 class="panierTitre">{{ item.product.name }}</h3>
                                    <p class="panierPrix">Prix : {{ item.product.price }} €</p>
                                    <p class="panierQuantite">Quantité : {{ item.quantity }}</p>
                                    <button class="btnSupprimer"
                                        data-action="cart#remove"
                                        data-product-id="{{ item.product.id }}">
                                        Supprimer
                                    </button>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                    <div class="panierTotal">
                        <p><strong>Total :</strong> <span data-cart-target="cartTotal">{{ cart.total }}</span> €</p>
                        <a href="" class="btnValider">Passer la commande</a>
                    </div>
                {% else %}
                    <p>Votre panier est vide.</p>
                {% endif %}
            </div>
        </div>
    </main>
{% endblock %}
