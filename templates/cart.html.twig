{% extends 'base.html.twig' %}

{% block title %}Votre panier
{% endblock %}

{% block content %}
{% include '_header.html.twig' %}

<a href="{{ path('velos') }}" class="btnRetour" title="Retour"></a>

<div class="panierContainer">
	<div class="panierItems">
		<h1>Votre panier</h1>
		{% if cart %}
			<table class="tablePanier">
				<thead>
					<tr>
						<th>Produit</th>
						<th>Prix unitaire</th>
						<th>Quantité</th>
						<th>Total</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for id, item in cart %}
						<tr class="cart-item" data-id="{{ id }}">
							<td>
								<div class="productName">
									<img src="" alt="{{ item.name }}" class="productImage">
									<span>{{ item.name }}</span>
								</div>
							</td>
							<td>{{ item.price }}€</td>
							<td>
								<input type="number" value="{{ item.quantity }}" min="1" class="quantityInput" data-action="change->cart#updateQuantity">
							</td>
							<td>{{ item.price * item.quantity }}€</td>
							<td>
								<button class="removeItemBtn" data-action="click->cart#removeFromCart">Retirer</button>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

			<div class="panierSummary">
				<div class="summaryItem" data-controller="cart">
					<strong>Total des articles :</strong>
					<span data-cart-target="itemCount"></span>
				</div>
				<div class="summaryItem" data-controller="cart">
					<strong>Total :</strong>
					<span data-cart-target="totalAmount">€</span>
				</div>
			</div>
		{% else %}
			<p>Votre panier est vide.</p>
		{% endif %}
	</div>

	<div class="panierDetails">
		<h2>Informations Panier</h2>
		<div class="panierActions">
			<div class="actionItem">
				<strong>Total :</strong>
				<span data-cart-target="totalAmount">€</span>
			</div>
			<div class="actionItem">
				<button class="btnAjouter" title="Passer à la caisse" onclick="window.location.href='{{ path('app_order') }}'" {% if cart|length < 1 %} style="opacity: 0.5; background-color: grey; cursor: not-allowed;" disabled {% endif %}> Passer à la caisse </button> </div> </div> </div> </div> {% include '_footer.html.twig' %} {% endblock %}
