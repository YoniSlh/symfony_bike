{% extends 'base.html.twig' %}

{% block content %}
	{% include '_header.html.twig' %}
	<div class="conteneurAdminProduit">
		<h2>Ajout d'une carte bancaire</h2>
		<form method="POST" class="formulaireProduit">
			<div class="champProduit">
				<label for="cardholder_name" class="labelProduit">Nom du titulaire :</label>
				<input type="text" id="cardholder_name" name="cardholder_name" required>
			</div>

			<div class="champProduit">
				<label for="card_number" class="labelProduit">Numéro de carte :</label>
				<input type="number" id="card_number" name="card_number" maxlength="16" pattern="\d{16}" required>
			</div>

			<div class="champProduit">
				<label for="expiration_date" class="labelProduit">Date d'expiration :</label>
				<input type="date" id="expiration_date" name="expiration_date" required>
			</div>

			<div class="champProduit">
				<label for="cvv" class="labelProduit">Code de sécurité (CVV) :</label>
				<input type="text" id="cvv" name="cvv" maxlength="3" pattern="\d{3}" required>
			</div>

			<div class="champProduit">
				<label for="billing_address" class="labelProduit">Adresse de facturation :</label>
				<textarea id="billing_address" name="billing_address" required></textarea>
			</div>

			<input type="submit" class="btnEnregistrer" onclick="return confirm('Êtes-vous sûr de confirmer l\'ajout de la carte ?');" value="Ajouter la carte"/>
		</form>
	</div>
	{% include '_footer.html.twig' %}
{% endblock %}
