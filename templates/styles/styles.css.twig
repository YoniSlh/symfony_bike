body {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4;
    color: #333;
    line-height: 1.6;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 5%;
}

/* Navbar */
.siteHeader {
    background-color: #333;
    padding: 15px 0;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    position: sticky;
    top: 0;
    z-index: 1000;
}

.logoSite {
    font-size: 1.8em;
    font-weight: bold;
    margin: 0;
}

.logoSite a {
    color: #fff;
    text-decoration: none;
    transition: color 0.1s ease;
}

.logoSite a:hover {
    color: #1e90ff;
}

.container-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

.main-nav ul {
    display: flex;
    gap: 25px;
    list-style: none;
    padding: 0;
    margin: 0;
}

.main-nav ul li a {
    color: #fff;
    text-decoration: none;
    font-size: 1.1em;
    font-weight: 500;
    padding: 8px 0;
    position: relative;
    transition: color 0.2s ease;
}

.main-nav ul li a::after {
    content: '';
    display: block;
    width: 0;
    height: 2px;
    background: #1e90ff;
    transition: width 0.3s;
    position: absolute;
    bottom: -5px;
    left: 0;
}

.main-nav ul li a:hover::after {
    width: 100%;
}

.main-nav ul li a:hover {
    color: #1e90ff;
}

/* Accueil */
.accueilIntro {
    position: relative;
    background-image: url('{{ asset('styles/images/velo_background.jpg') }}');
    background-size: cover;
    background-position: center;
    padding: 120px 0;
    color: #ffffff;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
}

.accueilIntro::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.3));
}

.accueilIntro .container {
    position: relative;
    z-index: 2;
    max-width: 800px;
    text-align: center;
    padding: 20px;
}

.accueilIntro h1 {
    font-size: 3em;
    font-weight: bold;
    margin-bottom: 20px;
    color: #f8f9fa;
    text-shadow: 3px 3px 10px rgba(0, 0, 0, 0.5);
}

.accueilIntro p {
    font-size: 1.4em;
    color: #e0e0e0;
    margin-bottom: 30px;
    line-height: 1.5;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
}

.btnRedirection {
    display: inline-block;
    padding: 12px 35px;
    background-color: #ff4b2b;
    color: white;
    text-decoration: none;
    font-weight: bold;
    border-radius: 50px;
    transition: background-color 0.2s ease, transform 0.2s ease;
    box-shadow: 0px 5px 15px rgba(255, 75, 43, 0.4);
}

.btnRedirection:hover {
    background-color: #e03d20;
    transform: scale(1.03);
}

/* Liste de vélos */
.veloListContainer {
    padding: 10px 0;
}

.listeVelos {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
    padding: 0;
}

.veloItem {
    background-color: #2c2c2c;
    border-radius: 15px;
    overflow: hidden;
    transition: transform 0.2s ease-in-out;
    cursor: pointer;
}

.veloItem:hover {
    transform: translateY(-2px);
}

.veloLink {
    display: block;
    text-decoration: none;
    color: inherit;
}

.veloImage {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 15px;
}

.veloImageDetail {
    height: 200px;
    object-fit: cover;
    border-radius: 15px;
}

.titreDetails {
    color: #f4f4f4;
    text-decoration: none;
    transition: color 0.1s ease-in-out;
}

.titreDetails:hover {
    color: #1e90ff;
}

.veloDetails {
    padding: 20px;
}

.veloDetails h3 {
    font-size: 1.4em;
    color: #f4f4f4;
    margin: 10px 0 0 0;
}

.veloDetails p {
    color: #f4f4f4;
    margin-top: 0px;
}

.veloDetails .btnRedirection {
    margin-top: 10px;
    display: inline-block;
    padding: 10px 30px;
}

.prixVeloItem {
    font-size: 1.2em;
    border-radius: 1px;
    background-color: #1e90ff;
    padding: 5px 10px;
}

.veloItemMarque {
    margin-top: 0;
    text-transform: uppercase;
    color: #777;
    font-size: 0.9em;
}

.stockInfo {
    color: #28a745;
}

/* Détails d'un vélo */
.veloDetailsContainer {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 20px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

.imageDescriptionContainer {
    display: flex;
    flex-direction: column;
}

.mainImageContainer {
    display: flex;
    flex: 1;
    position: relative;
    justify-content: center;
    align-items: center;
    background-color: #f4f4f4;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
}

.principalImage {
    max-width: 100%;
    height: auto;
    border-radius: 10px;
}

.detailsContainer {
    padding: 20px;
    background-color: #ffffff;
    color: #333;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.detailsContainer h2 {
    font-size: 1.7em;
    margin-bottom: 20px;
    text-align: left;
}

.detailsContainer ul {
    list-style-type: none;
    padding: 0;
    margin-bottom: 20px;
}

.detailsContainer ul li {
    margin: 10px 0;
    font-size: 1.1em;
}

.imageDescriptionContainer {
    display: flex;
}

.galerieImagesContainer {
    display: flex;
    align-items: flex-start;
}

.imageSecondaireContainer {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-right: 15px;
}

.imageSecondaireImage {
    width: 60px;
    height: 60px;
    object-fit: cover;
    border: 2px solid transparent;
    transition: border 0.3s ease, transform 0.2s ease;
}

.imageSecondaireImage:hover {
    border-color: #007bff;
    transform: scale(1.05);
}

.principalImage {
    max-width: 100%;
    max-height: 500px;
    transition: opacity 0.3s ease;
}

/* Conteneur achat   */
.veloInfosContainer {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.refVelo {
    color: #777;
}

.veloAchatContainer {
    padding: 20px;
    background-color: #ffffff;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    text-align: left;
}

.prixContainer, .stockContainer {
    margin-bottom: 10px;
}

.prixContainer {
    font-size: 1.4em;
}

.stockContainer {
    font-size: 1.1em;
}

.quantityContainer {
    margin-top: 10px;
    display: flex;
    align-items: center;
}

.quantitySelect {
    width: 50px;
    padding: 5px;
    border: 1px solid #ccc;
    border-radius: 5px;
    background-color: #f9f9f9;
    font-size: 0.9em;
    cursor: pointer;
}

.quantitySelect:focus {
    border-color: #1e90ff;
    outline: none;
}

.quantityLabel {
    font-size: 1.1em;
    color: #333;
    margin-right: 10px;
}

.btnRetour {
    display: inline-flex;
    align-items: center;
    text-decoration: none;
    color: #333;
    font-size: 1.2em; 
    border-radius: 5px;
    margin-left: 20px;
    transition: transform 0.1s ease-in-out;
}

.btnRetour::before {
    content: '←';
    font-size: 1.4em;
}

.btnRetour:hover {
    transform: scale(1.1);
}

.btnAjoutPanier {
    display: inline-block;
    padding: 9px 18px;
    background-color: #ff9900;
    color: white;
    text-decoration: none;
    border-radius: 25px;
    text-align: center;
    margin-top: 20px;
    font-weight: bold;
    font-size: 0.9em;
    transition: background-color 0.3s ease, box-shadow 0.3s ease, transform 0.15s ease;
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.2);
}

.btnAjoutPanier:hover {
    background-color: #e68a00;
    box-shadow: 0 5px 12px rgba(0, 0, 0, 0.25);
    transform: translateY(-2px);
}

/* Avis clients */
.avisContainer {
    margin-top: 10px;
}

.avisItem {
    margin-bottom: 15px;
    padding: 10px 0;
    border-bottom: 1px solid #e0e0e0;
}

.avisItem:last-child {
    border-bottom: none;
}

.avisHeader {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 5px;
}

.avisNom {
    font-weight: normal;
    font-size: 1.1em;
}

.nbAvis {
    font-size: 0.8em;
    border: 1px solid #333;
    background-color: #333;
    border-radius: 50px;
    color: white;
    padding: 5px 9px;
    margin-left: 6px;
    position: relative;
    top: -2px;
}

.etoiles {
    font-size: 1em;
}

.avisTexte {
    margin: 5px 0;
    font-size: 0.95em;
    color: #333;
}

.dateAvis {
    font-size: 0.85em;
    color: #999;
    margin-top: 5px;
}

/* Dropdown */
.dropdown {
    position: relative;
    display: inline-block;
}

.dropdown-toggle {
    text-decoration: none;
    color: #333;
    display: flex;
    align-items: center;
    padding: 10px;
}

.lang-logo {
    width: 20px; 
    margin-right: 5px; 
}

.dropdown-menu {
    display: none;
    position: absolute;
    background-color: #333;
    min-width: 80px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    z-index: 1;
    border-radius: 5px;
}

.dropdown:hover .dropdown-menu {
    display: block;
}

.dropdown-menu li {
    list-style-type: none;
    padding: 6px 10px;
}

.dropdown-menu li a {
    color: #fff;
    text-decoration: none;
    display: block;
    border-radius: 5px;
}

.dropdown-menu li:hover {
    background-color: #0056b3; 
    border-radius: 5px;
}

.main-nav ul {
    display: flex;
    align-items: center;
    padding: 0;
}

.main-nav ul li {
    margin: 0 15px;
}

/* Login */
.loginForm {
    max-width: 400px;
    margin: 100px auto;
    padding: 20px;
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    text-align: center;
}

.loginForm h2 {
    margin-bottom: 20px;
    font-size: 2em;
    color: #333;
}

.formGroup {
    margin-bottom: 15px;
    text-align: left;
}

.formGroup label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
}

.formGroup input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-sizing: border-box;
}

.btnLogin {
    width: 100%;
    padding: 10px;
    background-color: #1e90ff;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

.btnLogin:hover {
    background-color: #1c86ee;
}

/* S'inscrire */
.signupLink {
    text-align: center;
    margin-top: 15px;
}

.signupLink p {
    margin: 0;
    font-size: 14px;
}

.signupButton {
    color: #007bff;
    text-decoration: none;
    font-weight: bold;
    padding: 3px 8px;
    border: 2px solid #007bff;
    border-radius: 4px;
    transition: background-color 0.3s, color 0.3s;
}

.signupButton:hover {
    background-color: #007bff;
    color: white;
}

/* Panier */
.panierContainer {
    padding: 20px 0;
}

.panierDetails {
    padding: 20px;
    background-color: #ffffff;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.panierItems {
    padding: 0;
    list-style: none;
}

.panierItem {
    display: flex;
    align-items: center;
    padding: 20px 0;
    border-bottom: 1px solid #e0e0e0;
}

.panierImage {
    width: 100px;
    height: 100px;
    object-fit: cover;
    border-radius: 10px;
    margin-right: 20px;
}

.panierInfo {
    flex: 1;
}

.panierTitre {
    font-size: 1.4em;
    margin: 0;
}

.panierPrix {
    font-size: 1.2em;
    color: #333;
    margin: 5px 0;
}

.panierQuantite {
    font-size: 1.1em;
    color: #777;
    margin: 5px 0;
}

.btnSupprimer {
    background-color: #ff4b2b;
    color: white;
    border: none;
    padding: 5px 10px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.btnSupprimer:hover {
    background-color: #e03d20;
}

.panierTotal {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 20px;
}

.btnValider {
    padding: 10px 20px;
    background-color: #1e90ff;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
}

.btnValider:hover {
    background-color: #1c86ee;
}

/* Admin */
.conteneurAdmin {
    margin: 20px;
    padding: 20px;
    background-color: #f9f9f9;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.titreAdmin {
    font-size: 1.5rem;
    color: #444;
    text-align: left;
    margin-bottom: 0;
    font-family: 'Helvetica Neue', sans-serif;
    font-weight: 600;
}

.divTableAdmin {
    overflow-x: auto;
}

.tableAdmin {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
}

.tableAdmin th, .tableAdmin td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}

.tableAdmin th {
    background-color: #333;
    color: white;
    font-size: 1.1em;
}

.tableAdmin td {
    font-size: 1em;
    color: #333;
}

.tableAdmin tr:hover {
    background-color: #f2f2f2;
}

.tableAdmin .actionBtn {
    background-color: #1e90ff;
    color: white;
    border: none;
    padding: 5px 10px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 0.9em;
    transition: background-color 0.2s ease;
}

.tableAdmin .actionBtn:hover {
    background-color: #1c86ee;
}

.btnContainer {
    display: flex;
    gap: 10px;
}

.btnDelete {
    background-color: #ff4b2b;
    color: white;
    border: none;
    padding: 5px 10px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 0.9em;
    transition: background-color 0.2s ease;
    margin-right: -90px;
}

.btnDelete:hover {
    background-color: #e03d20;
}

.btnModifier {
    background-color: #1e90ff;
    color: white;
    text-decoration: none;
    border: none;
    padding: 5px 10px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 0.9em;
    transition: background-color 0.2s ease;
}

.btnModifier:hover {
    background-color: #1c86ee;
}

.tdAucun {
    text-align: center;
    color: #ff6f61;
    font-size: 1.1rem;
    font-weight: bold;
    padding: 10px;
}

@media screen and (max-width: 768px) {
    .tableAdmin {
        width: 100%;
        display: block;
        overflow-x: auto;
    }

    .tableAdmin th, .tableAdmin td {
        padding: 8px;
    }
}

/* Modification d'un produit */
.conteneurModificationProduit {
    max-width: 900px;
    margin: 50px auto;
    padding: 20px;
    background-color: #f8f8f8;
    border-radius: 12px;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
}

.formulaireModificationProduit {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: space-between;
}

.champModificationProduit {
    display: flex;
    flex-direction: column;
    flex-basis: 48%;
}

.labelModificationProduit {
    font-weight: 600;
    margin-bottom: 5px;
    color: #555;
}

.champModificationProduit > input {
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 1em;
}


.btnEnregistrerModif {
    padding: 12px 20px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-size: 1em;
    width: 100%;
    transition: background-color 0.3s ease;
    margin-top: 20px;
}

.btnEnregistrerModif:hover {
    background-color: #0056b3;
}

.btnEnregistrerModif:active {
    background-color: #0042a2;
}

/* Footer */
footer {
    display: block;
    background-color: #333;
    color: white;
    padding: 10px 0; 
    text-align: center;
    margin-top: 100px;
}
