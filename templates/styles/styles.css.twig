body {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4;
    color: #333;
    line-height: 1.6;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 5%;
}

/* Navbar */
.siteHeader {
    background-color: #333;
    padding: 10px 0;
}

.logoSite {
    font-size: 1.6em;
    color: white;
    margin: 0;
}

.main-nav ul {
    list-style: none;
    padding: 0;
    display: flex;
    gap: 20px;
}

.main-nav ul li a {
    color: white;
    text-decoration: none;
    font-size: 1.1em;
}

.main-nav ul li a:hover {
    text-decoration: underline;
}

.container-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 90%;
    max-width: 1200px;
    margin: 0 auto;
}

/* Accueil */
.accueilIntro {
    background-image: url('images/velo-background.jpg');
    background-size: cover;
    background-position: center;
    padding: 100px 0;
    color: white;
    text-align: center;
    box-shadow: inset 0 0 0 1000px rgba(0, 0, 0, 0.5);
    border-radius: 10px;
}

.accueilIntro h1 {
    font-size: 2.5em;
    margin: 10px 0;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
}

.accueilIntro p {
    font-size: 1.2em;
    margin-bottom: 20px;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
}

.btnRedirection {
    padding: 12px 30px;
    background-color: #007bff;
    color: white;
    text-decoration: none;
    border-radius: 25px;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.btnRedirection:hover {
    background-color: #0056b3;
    transform: scale(1.05);
}

/* Liste de vélos */
.veloListContainer {
    padding: 10px 0;
}

.listeVelos {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
    padding: 0;
}

.veloItem {
    background-color: #2c2c2c;
    border-radius: 15px;
    overflow: hidden;
 }

.veloImage {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 15px;
}

.veloImageDetail {
    height: 200px;
    object-fit: cover;
    border-radius: 15px;
}

.titreDetails {
    color: #f4f4f4;
    text-decoration: none;
    transition: color 0.2s ease-in-out, transform 0.1s ease-in-out;
}

.titreDetails:hover {
    color: #1e90ff;
    transform: scale(1.1);
}

.veloDetails {
    padding: 20px;
}

.veloDetails h3 {
    font-size: 1.4em;
    color: #f4f4f4;
    margin: 10px 0 0 0;
}

.veloDetails p {
    color: #f4f4f4;
    margin-top: 0px;
}

.veloDetails .btnRedirection {
    margin-top: 10px;
    display: inline-block;
    padding: 10px 30px;
}

.prixVeloItem {
    font-size: 1.2em;
    border-radius: 1px;
    background-color: #1e90ff;
    padding: 5px 10px;
}

.veloItemMarque {
    margin-top: 0;
    text-transform: uppercase;
    color: #777;
    font-size: 0.9em;
}

.stockInfo {
    color: #28a745;
}

/* Détails d'un vélo */
.veloDetailsContainer {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 20px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

.imageDescriptionContainer {
    display: flex;
    flex-direction: column;
}

.mainImageContainer {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #f4f4f4;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
}

.principalImage {
    max-width: 100%;
    height: auto;
    border-radius: 10px;
}

.detailsContainer {
    padding: 20px;
    background-color: #ffffff;
    color: #333;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.detailsContainer h2 {
    font-size: 1.7em;
    margin-bottom: 20px;
    text-align: left;
}

.detailsContainer ul {
    list-style-type: none;
    padding: 0;
    margin-bottom: 20px;
}

.detailsContainer ul li {
    margin: 10px 0;
    font-size: 1.1em;
}

/* Conteneur achat   */
.veloInfosContainer {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.refVelo {
    color: #777;
}

.veloAchatContainer {
    padding: 20px;
    background-color: #ffffff;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    text-align: left;
}

.prixContainer, .stockContainer {
    margin-bottom: 10px;
}

.prixContainer {
    font-size: 1.4em;
}

.stockContainer {
    font-size: 1.1em;
}

.btnRetour {
    display: inline-flex;
    align-items: center;
    text-decoration: none;
    color: #333;
    font-size: 1.2em; 
    border-radius: 5px;
    margin-left: 20px;
    transition: transform 0.1s ease-in-out;
}

.btnRetour::before {
    content: '←';
    font-size: 1.4em;
}

.btnRetour:hover {
    transform: scale(1.1);
}

.btnAjoutPanier {
    display: inline-block;
    padding: 9px 18px;
    background-color: #ff9900;
    color: white;
    text-decoration: none;
    border-radius: 25px;
    text-align: center;
    margin-top: 8px;
    font-weight: bold;
    font-size: 0.9em;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.btnAjoutPanier:hover {
    background-color: #e68a00;
    transform: scale(1.02);
}

/* Avis clients */
.avisContainer {
    margin-top: 10px;
}

.avisItem {
    margin-bottom: 15px;
    padding: 10px 0;
    border-bottom: 1px solid #e0e0e0;
}

.avisItem:last-child {
    border-bottom: none;
}

.avisHeader {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 5px;
}

.avisNom {
    font-weight: normal;
    font-size: 1.1em;
}

.nbAvis {
    font-size: 0.8em;
    border: 1px solid #333;
    background-color: #333;
    border-radius: 50px;
    color: white;
    padding: 5px 9px;
    margin-left: 6px;
    position: relative;
    top: -2px;
}

.etoiles {
    font-size: 1em;
}

.avisTexte {
    margin: 5px 0;
    font-size: 0.95em;
    color: #333;
}

.dateAvis {
    font-size: 0.85em;
    color: #999;
    margin-top: 5px;
}

/* Dropdown */
.dropdown {
    position: relative;
    display: inline-block;
}

.dropdown-toggle {
    text-decoration: none;
    color: #333;
    display: flex;
    align-items: center;
    padding: 10px;
}

.lang-logo {
    width: 20px; 
    margin-right: 5px; 
}

.dropdown-menu {
    display: none;
    position: absolute;
    background-color: #333;
    min-width: 80px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    z-index: 1;
    border-radius: 5px;
}

.dropdown:hover .dropdown-menu {
    display: block;
}

.dropdown-menu li {
    list-style-type: none;
    padding: 6px 10px;
}

.dropdown-menu li a {
    color: #fff;
    text-decoration: none;
    display: block;
    border-radius: 5px;
}

.dropdown-menu li:hover {
    background-color: #0056b3; 
    border-radius: 5px;
}

.main-nav ul {
    display: flex;
    align-items: center;
    padding: 0;
}

.main-nav ul li {
    margin: 0 15px;
}

/* Login */
.loginForm {
    max-width: 400px;
    margin: 100px auto;
    padding: 20px;
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    text-align: center;
}

.loginForm h2 {
    margin-bottom: 20px;
    font-size: 2em;
    color: #333;
}

.formGroup {
    margin-bottom: 15px;
    text-align: left;
}

.formGroup label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
}

.formGroup input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-sizing: border-box;
}

.btnLogin {
    width: 100%;
    padding: 10px;
    background-color: #1e90ff;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

.btnLogin:hover {
    background-color: #1c86ee;
}

/* Footer */
footer {
    display: block;
    background-color: #222;
    color: white;
    padding: 20px 0; 
    text-align: center;
    margin-top: 150px;
}