body {
    font-family: 'Roboto', sans-serif;
    background-color: #f0f2f5;
    margin: 0;
    color: #333;
}

main {
    max-width: 1200px;
    margin: 30px auto;
    padding: 0 20px;
}

h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 20px;
}

ul {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    padding: 0;
    list-style: none;
}

.listeVelos {
    background: #fff;
    flex: 1 1 calc(33.333% - 20px);
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
}

.listeVelos h3 {
    font-size: 1.5rem;
    color: #2c3e50;
    margin-bottom: 15px;
}

.listeVelo p {
    line-height: 1.6;
    margin-bottom: 10px;
}

.listeVelo strong {
    font-size: 1.3rem;
    color: #e74c3c;
    margin-bottom: 15px;
    display: block;
}

a.btn {
    display: inline-block;
    padding: 12px 20px;
    background: #3498db;
    color: #fff;
    border-radius: 4px;
    text-decoration: none;
    font-weight: bold;
}

a.btn:hover {
    background: #2980b9;
}

@media (max-width: 768px) {
    li {
        flex: 1 1 100%;
    }

    h2 {
        font-size: 2rem;
    }
}
