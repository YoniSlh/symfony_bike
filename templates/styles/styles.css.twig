body {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4;
    color: #333;
    line-height: 1.6;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 5%;
}

/* Navbar */
.siteHeader {
    background-color: #333;
    padding: 10px 0;
}

.logoSite {
    font-size: 1.6em;
    color: white;
    margin: 0;
}

.main-nav ul {
    list-style: none;
    padding: 0;
    display: flex;
    gap: 20px;
}

.main-nav ul li a {
    color: white;
    text-decoration: none;
    font-size: 1.1em;
    padding: 10px 15px;
    border-radius: 5px;
}

.main-nav ul li a:hover {
    text-decoration: underline;
}

.container-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 90%;
    max-width: 1200px;
    margin: 0 auto;
}

/* Accueil */
.accueilIntro {
    background-image: url('images/velo-background.jpg');
    background-size: cover;
    background-position: center;
    padding: 150px 0;
    color: white;
    text-align: center;
    box-shadow: inset 0 0 0 1000px rgba(0, 0, 0, 0.3);
}

.accueilIntro h1 {
    font-size: 3em;
    margin: 20px 0;
}

.accueilIntro p {
    font-size: 1.5em;
    margin-bottom: 30px;
}

.btnRedirection {
    padding: 15px 40px;
    background-color: #1e90ff;
    color: white;
    text-decoration: none;
    border-radius: 50px;
}

/* Liste de vélos */
.veloListContainer {
    padding: 50px 0;
}

.listeVelos {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 40px;
    padding: 0;
}

.veloItem {
    background-color: #1e1e2f;
    border-radius: 15px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    overflow: hidden;
}

.titreDetails {
    color: #f4f4f4;
    text-decoration: none;
    transition: color 0.2s ease-in-out, transform 0.1s ease-in-out;
}

.titreDetails:hover {
    color: #1e90ff;
    transform: scale(1.1);
}

.veloDetails {
    padding: 20px;
}

.veloDetails h3 {
    font-size: 1.5em;
    color: #f4f4f4;
    margin: 15px 0;
}

.veloDetails p {
    margin-bottom: 20px;
    color: #f4f4f4;
}

.prixVelo {
    color: #2bab2b;
}

.veloDetails .btnRedirection {
    margin-top: 10px;
    display: inline-block;
    padding: 10px 30px;
}

.veloImage {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 15px;
}

.veloImageDetail {
    height: 200px;
    object-fit: cover;
    border-radius: 15px;
}

.stockInfo {
    color: #1e90ff;
}

/* Détails d'un vélo */
.veloDetailsContainer {
    max-width: 1200px;
    margin: 40px auto;
    padding: 20px;
    background-color: #ffffff;
    color: #333;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.veloImageContainer {
    max-width: 600px;
    padding: 20px;
    background-color: #ffffff;
    color: #333;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.veloInfosContainer {
    max-width: 600px;
    padding: 20px;
    background-color: #ffffff;
    color: #333;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.veloAchatContainer {
    max-width: 400px;
    padding: 20px;
    background-color: #ffffff;
    color: #333;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.veloDetails h1 {
    font-size: 2.5em;
    margin-bottom: 20px;
    text-align: center;
}

.veloDetails h2 {
    font-size: 1.5em;
    margin-bottom: 20px;
    text-align: center;
}

.veloDetails ul {
    list-style-type: none;
    padding: 0;
    margin-bottom: 20px;
}

.veloDetails ul li {
    margin: 10px 0;
    font-size: 1.2em;
}

.btnRetour {
    display: inline-flex;
    align-items: center;
    text-decoration: none;
    color: #333;
    font-size: 1.2em; 
    border-radius: 5px;
    transition: transform 0.1s ease-in-out;
}

.btnRetour::before {
    content: '←';
    font-size: 1.4em;
}

.btnRetour:hover {
    transform: scale(1.1);
}

/* Achat/Autres */
.btnAjoutPanier {
    display: inline-block;
    padding: 10px 20px;
    background-color: #28a745;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    text-align: center;
}

.btnAjoutPanier:hover {
    background-color: #218838;
}

/* Dropdown */
.dropdown {
    position: relative;
    display: inline-block;
}

.dropdown-toggle {
    text-decoration: none;
    color: #333;
    display: flex;
    align-items: center;
    padding: 10px;
}

.lang-logo {
    width: 20px; 
    margin-right: 5px; 
}

.dropdown-menu {
    display: none;
    position: absolute;
    background-color: #333;
    min-width: 80px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    z-index: 1;
    border-radius: 5px;
}

.dropdown:hover .dropdown-menu {
    display: block;
}

.dropdown-menu li {
    list-style-type: none;
    padding: 6px 10px;
}

.dropdown-menu li a {
    color: #fff;
    text-decoration: none;
    display: block;
    border-radius: 5px;
}

.dropdown-menu li:hover {
    background-color: #0056b3; 
    border-radius: 5px;
}

.main-nav ul {
    display: flex;
    align-items: center;
    padding: 0;
}

.main-nav ul li {
    margin: 0 15px;
}


/* Footer */
footer {
    display: none; /* pas affiché pour le moment */
    background-color: #222;
    color: white;
    padding: 20px 0; 
    text-align: center;
    margin-top: 150px;
}
