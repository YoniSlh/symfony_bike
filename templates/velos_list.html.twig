{% extends 'base.html.twig' %}

{% block title %}Liste des vélos
{% endblock %}

{% block content %}
	{% include '_header.html.twig' %}
	<main class="veloListContainer">
		<div class="container">
			<h2>Nos vélos</h2>
			<ul class="listeVelos">
				{% for velo in velos %}
					<li class="veloItem">
						<div class="veloDetails">
							<h3>
								<a href="{{ path('velos_show', {'id': velo.id}) }}" class="titreDetails">{{ velo.name }}</a>
							</h3>
							<img src="{{ velo.image }}" alt="{{ velo.name }}" class="veloImage">
							<p>{{ velo.type }}</p>
							<p>{{ velo.description }}</p>
							<p>
								<strong class="prixVelo">{{ velo.price }}
									€</strong>
							</p>
							<p>
								<strong class="stockInfo">{{velo.stock}}</strong>
							</p>
							<a href="{{ path('velos') }}" class="btnAjoutPanier">Ajouter au panier</a>
						</div>
					</li>
				{% endfor %}
			</ul>
		</div>
	</main>
	{% include '_footer.html.twig' %}
{% endblock %}
